    --libdir=/usr/lib64 \
    --enable-o_direct \
    --disable-cryptography \
    --disable-queue \
    --disable-replication \
    --disable-verify \
    --enable-compat185 \
    --disable-sql \
    --enable-shared \
    --enable-static \
    --enable-cxx \
    --disable-rpath \
    --disable-test
